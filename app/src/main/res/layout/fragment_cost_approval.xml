<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                app:cardElevation="7dp">
                <include layout="@layout/headerdetails"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                app:cardElevation="7dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Cost Details"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="7">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rate Per Sq.yds"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:fontFamily="@font/montserratregular"
                    android:singleLine="true"
                    android:ellipsize="marquee"/>
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plot Cost"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark" />
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Admin Fee"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="18sp"
                    android:textColor="#000" />
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Premium"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spl.Premium"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="18sp"
                    android:textColor="#000"/>

                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dev Charges"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="18sp"
                    android:textColor="#000" />
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BSP6"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Corpus Fund"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="18sp"
                    android:textColor="#000"/>

                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Cost"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="20sp"
                    android:textColor="@android:color/holo_red_dark"/>
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Paid"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="20sp"
                    android:textColor="@android:color/holo_green_dark"/>
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payable Amt."
                    android:fontFamily="@font/montserratregular"
                    android:textSize="20sp"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" :"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:gravity="right"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"
                        android:gravity="right"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" :"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:gravity="right"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" :"
                        android:gravity="right"
                        android:textSize="18sp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" :"
                        android:gravity="right"
                        android:textSize="18sp"
                        android:textColor="#000"/>

                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" :"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:gravity="right"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=" :"
                        android:textSize="18sp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" :"
                        android:gravity="right"
                        android:textSize="18sp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" :"
                        android:textSize="18sp"
                        android:gravity="right"
                        android:textColor="#000"/>

                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" :"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:textSize="20sp"
                        android:textColor="@android:color/holo_red_dark"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" :"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:textSize="20sp"
                        android:textColor="@android:color/holo_green_dark"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" :"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:textSize="22sp"
                        android:textColor="@android:color/holo_red_dark"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_cost_ratepersqr"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="right"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txt_cost_plotcost"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="right"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txt_cost_adminfee"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="right"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txt_cost_cpreminum"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="right"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txt_cost_bsp4"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="right"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/txt_cost_devcharges"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="right"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txt_cost_bsp6"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="right"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txt_cost_campusfund"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="right"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txt_cost_others"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="right"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txt_cost_totalcost"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="20sp"
                    android:gravity="right"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txt_cost_totalpayed"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="20sp"
                    android:gravity="right"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txt_cost_payble"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:fontFamily="@font/montserratregular"
                    android:gravity="right"
                    android:textColor="@android:color/holo_red_dark"/>
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/liner_approved_cost_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_fragment_approved"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approved"
                android:fontFamily="@font/montserratregular"
                android:textColor="#2ecc71"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Remarks"
                android:fontFamily="@font/montserratregular"
                android:textColor="@android:color/holo_red_dark"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cost_bot"
            android:layout_below="@+id/layout_remarks"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">
                <EditText
                    android:id="@+id/editText"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/montserratregular"
                    android:hint="@string/Remarkshint"
                    android:inputType="textMultiLine"
                    android:background="@android:color/transparent"/>
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/btnCost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=" Approve Cost "
                android:fontFamily="@font/montserratregular"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="2"/>
        </LinearLayout>
    </RelativeLayout>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/ApprovalProg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>