<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="4"
    android:orientation="vertical"
    android:layout_weight="4">
    <LinearLayout android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <Button
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/img_btn_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="40sp"
            android:background="@color/silver"/>

        <Button
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/img_btn_two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="40sp"
            android:background="@color/silver"/>

        <Button
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/img_btn_three"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="40sp"
            android:background="@color/silver"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center">

        <Button
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/img_btn_four"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="40sp"
            android:background="@color/silver"/>

        <Button
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/img_btn_five"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="40sp"
            android:background="@color/silver"/>

        <Button
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/img_btn_six"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="40sp"
            android:background="@color/silver"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center">

        <Button
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/img_btn_seven"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="40sp"
            android:background="@color/silver"/>

        <Button
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/img_btn_eight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="40sp"
            android:background="@color/silver"/>

        <Button
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/img_btn_nine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="40sp"
            android:background="@color/silver"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center">

        <ImageButton
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/img_btn_clear"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/clear_new"
            android:background="@color/silver"/>

        <Button
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/img_btn_zero"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="40sp"
            android:background="@color/silver"/>

        <Button
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/img_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="OK"
            android:textSize="40sp"
            android:background="@color/silver"/>
    </LinearLayout>
</LinearLayout>



